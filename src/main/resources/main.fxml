         <HBox alignment="BOTTOM_CENTER" prefWidth="527.0" spacing="20">
            <Button fx:id="btnManageItems" prefHeight="26.0" prefWidth="111.0" text="Manage Items" />
            <Button fx:id="btnManageLocations" prefHeight="26.0" prefWidth="135.0" text="Manage Locations" />
            <Button fx:id="btnManageVisitors" prefHeight="26.0" prefWidth="119.0" text="Manage Visitors" />
