<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.dbproject.controllers.MainController">
   <top>
      <MenuBar>
         <Menu text="File">
            <MenuItem text="Open" />
            <MenuItem text="Save" />
            <MenuItem text="Exit" />
         </Menu>
         <Menu text="Help">
            <MenuItem text="About" />
         </Menu>
      </MenuBar>
   </top>
   <left>
      <VBox spacing="10" style="-fx-background-color: #e0e0e0; -fx-padding: 10;">
         <Button fx:id="btnItemDetails" text="Item Details" />
